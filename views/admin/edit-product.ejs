<%- include('../includes/head.ejs') %>
</head>

<%- include('../includes/navigation.ejs') %>
<div class="wrapper">
  <h1 class="title" align="center">
    Fill up the form to <% if (editing) { %> edit <% } else { %> add <% } %> a product to the shop.
  </h1>
  <form class="product-form" action="/admin<% if (editing) { %>/edit-product<% } else { %>/add-product<% } %>" method="POST">
    <div class="form-control">
      <label for="title">
        Title
      </label>
      <input type="text" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
    </div>
    <div class="form-control">
      <input type="file" id="imageUrl" data-multiple-caption="{count} files selected" multiple
        accept=".svg, .png">
      <label for="imageUrl">
        <span class="icon-container secondary">
          <i class="fas fa-upload"></i>
        </span>
        Add Image
      </label>
      <div class="img-preview__container">
      </div>
      <input type="hidden" name="imageUrl" id="imageUrl">
    </div>
    <div class="form-control">
      <label for="price">
        Price
      </label>
      <input type="text" name="price" id="price" value="<% if (editing) { %><%= product.price %><% } %>">
    </div>
    <div class="form-control">
      <label for="description">
        Description
      </label>
      <textarea rows="5" name="description" id="description"><% if (editing) { %><%= product.description %><% } %></textarea>
    </div>
    <% if (editing) { %>
      <input type="hidden" name="id" value="<%= product.id %>">
    <% } %>
    <button class="button secondary" type="submit">
      <% if (editing) { %> Edit Product <% } else { %> Add Product <% } %>
    </button>
  </form>
</div>
<%- include('../includes/end.ejs') %>
