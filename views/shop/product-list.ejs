<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/shop.css">
</head>
<%- include('../includes/navigation.ejs') %>
<div class="wrapper">
  <% if (products.length > 0) { %>
    <div class="grid clearfix">
      <% products.map(product => { %>
      <article class="card product-item" id="<%= product.id %>">
        <div class="card__header">
          <h1 class="title">
            <%= product.title %>
          </h1>
        </div>
        <a class="card__image" href="/catalog/<%= product.id %>" onclick="productDetailsHandler(<%= product.id %>)">
          <img src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="A Book">
        </a>
        <div class="card__content">
          <h2 class="product__price">
            $ <%= product.price %>
          </h2>
          <p class="product__description">
            <%= product.description %>
          </p>
        </div>
        <div class="card__actions">
          <form action="/add-to-cart" method="post">
            <button class="button secondary">
              Add to Cart
            </button>
          </form>
          <form action="/save-for-later" method="post">
            <button class="button secondary">
              Save for Later
            </button>
          </form>
        </div>
      </article>
      <% }) %>
    </div>
  <% } else { %>
    <h1 class="title">No Products Found!</h1>
  <% } %>
</div>
<%- include('../includes/end.ejs') %>
