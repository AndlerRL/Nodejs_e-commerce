{
  "name": "nodejs_repo",
  "version": "1.0.0",
  "description": "Node.js Repository using variation of packages.",
  "main": "app.js",
  "scripts": {
    "build": "cf push le-shop",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "dev": "cross-env NODE_ENV=development nodemon server/server.js",
    "start": "node server/server.js",
    "scss-compile": "node-sass -rw public/scss/ -o public/css/",
    "watch": "npm run scss-compile"
  },
  "author": "AndlerRL",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "mysql2": "^2.0.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.3"
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    }
  }
}
