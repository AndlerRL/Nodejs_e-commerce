{
  "name": "nodejs_repo",
  "version": "1.0.0",
  "description": "Node.js Repository using variation of packages.",
  "main": "app.js",
  "scripts": {
    "build": "netlify-lambda build express",
    "test": "jest",
    "coverage": "jest --coverage",
    "start": "nodemon server-local.js",
    "init": "node server-local.js",
    "scss-compile": "node-sass -rw public/scss/ -o public/css/",
    "watch": "npm run scss-compile"
  },
  "author": "AndlerRL",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "netlify-lambda": "^1.6.3",
    "nodemon": "^1.19.4",
    "serverless-http": "^2.3.0"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "mysql2": "^2.0.2",
    "sequelize": "^5.21.3"
  },
  "engines": {
    "node": ">=4.3.2"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    }
  }
}
